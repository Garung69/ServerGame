<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="css/report.css">
    <title>Report</title>
</head>

<body>
    <%- include('nav') %>
        <div class="BigContainer">
            <div class="Profile">
                <% if(profile){ %>
                    <div class="Profile-Avatar">
                        <div class="Profile-Avatar-Image">
                            <img src="/nftimage/1.png" height="100%" width="100%" alt="Avatar">
                        </div>
                        <div class="Profile-Avatar-Name">
                            <div class="Profile-Avatar-Name-span">
                                <% if(profile){ %>
                                    <%=profile.SubAddress%>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="Profile-Data">
                        <br>
                        <div>Address: <%=profile.Address%>
                        </div>
                        <br>
                        <div>Total NFT: <%=profile.Nft%>
                        </div>
                        <br>
                        <div>Total Point: <%=profile.Point%> rp</div>
                        <br>
                        <div>Reward Distributed: <%=profile.Token%> TBT</div>
                    </div>
            </div>
            <div class="Activity">
                <div class="Activity-Table-Head">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" width="25%">Date</th>
                                <th scope="col" width="25%">Point Earned</th>
                                <th scope="col" width="30%">Token Distributed</th>
                                <th scope="col" width="20%">Detail</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="Activity-Table-Body">
                    <table class="table">
                        <thead>
                            <% if(activity){ %>
                                <% activity.forEach(function(data) { %>
                                    <tr>
                                        <td scope="col" width="25%">
                                            <%=data._date%>
                                        </td>
                                        <td scope="col" width="25%">
                                            <%=data._point%> Rp
                                        </td>
                                        <td scope="col" width="30%">
                                            <%=data._token%> TTBT
                                        </td>
                                        <td scope="col" width="20%">
                                            <a href="<%=data._link%>">View</a>
                                        </td>
                                    </tr>
                                    <% })%>
                                        <% } %>
                        </thead>
                    </table>
                </div>
            </div>
            <% } else { %>
                <Button id="Wallet_Connect" type="button" class="btn-primary btn" onclick="loadAddress()">Connect
                    Wallet</Button>
                <% } %>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
        <script src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js"></script>
</body>

</html>
<script>
    async function loadAddress() {
        const accounts = await ethereum.request({ method: 'eth_requestAccounts' });
        account = accounts[0];
        if (account) {
            console.log('/rp' + account)
            window.location.href = '/rp' + account;
        }

    }
</script>