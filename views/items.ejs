<script>
    let account;

    window.onload = async () =>{
        console.log("a")
        if (typeof window.ethereum == 'undefined') {
            if (confirm("Please install metamask!") == true) {
                let url = "https://metamask.io/download/";
                window.open(url, '_blank').focus();
            }
        } else {
            const accounts = await ethereum.request({ method: 'eth_requestAccounts' });
            account = accounts[0];
            console.log(account);
        }
        const items = 6;
            for (var i = 1; i < items; i++) {
                let X = 0;
                let calX = i % 5;
                if (calX == 1) {
                    X = 0;
                }
                if (calX == 2) {
                    X = 286;
                }
                if (calX == 3) {
                    X = 572;
                }
                if (calX == 4) {
                    X = 858;
                }
                if (calX == 0) {
                    X = 1144;
                }
                let calY = (((i - 1) - ((i - 1) % 5)) / 5);
                let Y = calY * 449;
                document.getElementById("items-" + i).style.transform = "translate(" + X + "px, " + Y + "px)";
            }
    }
    
    function buyItem(ItemsId){
        elementId = "item-count-" + ItemsId;
        if(validateTransaction(elementId)){
            const count = document.getElementById(elementId).value;
            setTransfer(ItemsId, count);
        }
    }

    async function setTransfer(ItemsId, count) {
        const transactionParameters = {
            to: '0xdD9a69A4380FFFA49f1962b5dDE7E3143BE37E86', 
            value: '0x' + (count * 1000000000000000).toString(16),
        };
        transactionParameters.from = account;
        const txHash = await ethereum.request({
            method: 'eth_sendTransaction',
            params: [transactionParameters],
        }).then((txHash) => $.ajax({
            url: '/saveDataBuyItems',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(
                { tx: txHash, address: account, id: ItemsId, count: count}
            ),
            datatype: "json",
            success: function (result) {
                alert("Purchase Items successful! please come back your game!")
            },
            error: function (result) {
                console.log(result);
            }
        }));
    };
    async function getAccount() {
        const accounts = await window.ethereum.request({
            method: "eth_requestAccounts",
            params: [
                {
                    eth_accounts: {}
                }
            ]
        });
        return accounts[0];
    }
    function changeCount(id,count){
        elementId = "item-count-" + id;
        const inputElement = document.getElementById(elementId);
        inputElement.value = count;
    }
    function validateTransaction(id) {
        var x = document.getElementById(id).value;
        if (x == '' || x == null) {
            alert('Please input a number')
            return false;
        }
        x = parseInt(x)
        if (isNaN(x)) {
            alert('Please input a number')
            return false;
        }
        if (x < 0) {
            alert('Please input a number Geater than 0')
            return false;
        }
        return true;
    }
</script>